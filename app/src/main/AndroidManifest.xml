<?xml version="1.0" encoding="utf-8"?>

<!-- Manifest da aplicação PawBuddy -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissão para acesso à internet (ex.: chamadas à API) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permissão para verificar estado da ligação de rede -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Configuração principal da aplicação -->
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PawBuddy">

        <!-- Activity principal (ponto de entrada da app) -->
        <activity
            android:name=".ui.activity.activity.MainActivity"
            android:exported="true">

            <!-- Intent-filter que define esta activity como LAUNCHER -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

    <!-- Funcionalidade de hardware utilizada pela app (câmara) -->
    <uses-feature android:name="android.hardware.camera.any" />

    <!-- Permissão para acesso à câmara -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Permissão para escrita em armazenamento externo (até Android 9 / API 28) -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

</manifest>
