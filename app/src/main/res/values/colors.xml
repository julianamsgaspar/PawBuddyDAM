<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- =========================================================
         PawBuddy — Cores (values/colors.xml)

         Objetivos:
         - Centralizar paleta cromática (consistência e manutenção)
         - Evitar hardcoded nos layouts
         - Preparar base para night/colors.xml (dark mode)

         Nota:
         - Nomes semânticos (paw_primary, paw_surface, etc.) > nomes visuais
           porque descrevem intenção de uso.
         ========================================================= -->

    <!-- =========================
         Neutros base
         ========================= -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- =========================
         Estados (erro / destrutivo)
         ========================= -->
    <color name="danger_red">#D32F2F</color>
    <color name="error_red">#D32F2F</color>

    <!-- =========================
         Texto (fallback/apoio)
         Nota: Em Material 3, ideal é usar ?attr/colorOnSurface,
               mas manter paw_text pode ser útil em casos pontuais.
         ========================= -->
    <color name="paw_text">#1C1B1F</color>

    <!-- =========================
         Branding PawBuddy — Turquesa vivo e alegre
         (Mais saturação e “energia”, sem perder contraste)
         ========================= -->

    <!-- Primária (turquesa vivo) -->
    <color name="paw_primary">#00A9A6</color>
    <color name="paw_on_primary">#FFFFFF</color>

    <!-- Secundária (turquesa mais "mint", complementar) -->
    <color name="paw_secondary">#00C2B8</color>
    <color name="paw_on_secondary">#003734</color>

    <!-- Primária Container (fundos suaves: hero card, badges, destaques) -->
    <color name="paw_primary_container">#C8F7F4</color>
    <color name="paw_on_primary_container">#004B46</color>

    <!-- =========================
         Superfícies e fundos (tema claro)
         - background: cinza muito claro (separa do branco dos cards)
         - surface: branco (cards e áreas de conteúdo)
         - surface_variant: levemente “cool” para blocos secundários
         ========================= -->
    <color name="paw_background">#F2F4F5</color>
    <color name="paw_surface">#FFFFFF</color>
    <color name="paw_surface_variant">#E6F7F6</color>

    <!-- =========================
         Cores “on*” (texto/ícones sobre fundos)
         ========================= -->
    <color name="paw_on_surface">#1F1F1F</color>
    <color name="paw_on_surface_variant">#2F3F3E</color>

    <!-- =========================
         Contornos / divisórias
         ========================= -->
    <color name="paw_outline">#B7D6D3</color>

</resources>
