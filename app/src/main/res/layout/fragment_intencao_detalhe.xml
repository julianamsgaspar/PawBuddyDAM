<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout do ecrã de detalhe da Intenção de Adoção.
  Usa NestedScrollView para permitir scroll e garantir boa leitura em ecrãs pequenos.
-->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Container vertical com padding global do conteúdo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card principal:
             Agrupa toda a informação da intenção de adoção de forma consistente -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- TÍTULO:
                     Identificação do ecrã -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_intencao_detail"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <!-- ESTADO:
                     Campo informativo sobre o estado atual da intenção -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/label_estado"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-" />

                <!-- DATA:
                     Data associada ao registo/submissão -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_data"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-" />

                <!-- UTILIZADOR:
                     Informação do utilizador associado (tipicamente relevante em contexto admin) -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblUtilizador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_utilizador"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtUtilizador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-" />

                <!-- ID DO UTILIZADOR:
                     Campo adicional para identificação do registo (admin/depuração) -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblUtilizadorId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_utilizador_id"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtUtilizadorId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-" />

                <!-- Separador visual simples antes da secção do animal -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

                <!-- ANIMAL:
                     Identificação do animal pretendido -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblAnimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_animal"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtAnimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-" />

                <!-- PROFISSÃO:
                     Dado fornecido pelo utilizador no formulário -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblProfissao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_profissao"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtProfissao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-" />

                <!-- RESIDÊNCIA:
                     Tipo de residência indicado -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblResidencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_residencia"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtResidencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-" />

                <!-- TEM ANIMAIS:
                     Indica se o utilizador já possui animais -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblTemAnimais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_tem_animais"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtTemAnimais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-" />

                <!-- QUAIS:
                     Lista/descrição dos animais existentes (quando aplicável) -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblQuais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/label_quais"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtQuaisAnimais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-" />

                <!-- MOTIVO:
                     Texto justificativo submetido pelo utilizador -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lblMotivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/label_motivo"
                    android:textStyle="bold"
                    android:alpha="0.75" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtMotivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:lineSpacingExtra="2dp"
                    android:minLines="2"
                    android:text="-" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
