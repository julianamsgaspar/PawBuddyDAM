<?xml version="1.0" encoding="utf-8"?>

<!--
  Item de lista em formato "cartão" com ícone, texto e ações (editar/remover).
  MaterialCardView dá o aspeto de card com cantos arredondados e stroke.
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp"
    app:cardCornerRadius="18dp"
    app:strokeWidth="1dp">

    <!-- Conteúdo horizontal: ícone + info + botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Ícone/avatar (ex.: animal) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_pets"
            android:background="?attr/colorSurfaceVariant"
            android:padding="8dp"
            app:tint="?attr/colorPrimary" />

        <!-- Bloco de texto (ocupa o espaço disponível) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <!-- Nome / título principal -->
            <TextView
                android:id="@+id/tvNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Meta informação (ex.: espécie/idade/estado, etc.) -->
            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:alpha="0.65"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <!-- Botão de editar (compacto, estilo outlined) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/title_alterar_animal"
            android:textSize="12sp"
            android:gravity="center"
            android:textAlignment="center"
            app:icon="@drawable/ic_edit"
            app:iconSize="16dp"
            app:iconPadding="6dp"
            app:iconGravity="textStart"
            android:insetLeft="0dp"
            android:insetRight="0dp" />

        <!-- Botão de remover (compacto, destacado a vermelho) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemover"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:minWidth="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/action_delete"
            android:textSize="12sp"
            android:gravity="center"
            android:textAlignment="center"
            app:icon="@drawable/ic_delete"
            app:iconSize="16dp"
            app:iconPadding="6dp"
            app:iconGravity="textStart"
            android:textColor="@android:color/holo_red_dark"
            app:iconTint="@android:color/holo_red_dark"
            app:strokeColor="@android:color/holo_red_dark"
            android:insetLeft="0dp"
            android:insetRight="0dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
