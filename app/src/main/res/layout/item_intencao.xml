<?xml version="1.0" encoding="utf-8"?>

<!--
  Item de lista (card) para uma intenção de adoção.
  É clicável e mostra informação principal + ações (apenas para admin).
-->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="18dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:checkedIconVisible="false"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:strokeWidth="1dp">

    <!-- Container vertical do conteúdo do card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Linha superior: nome do animal (esquerda) e estado (direita) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtAnimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Animal: -"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: -"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Data associada à intenção -->
        <TextView
            android:id="@+id/txtDataIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Data: -"
            android:textSize="12sp" />

        <!-- Utilizador (pode ser mostrado/ocultado consoante o perfil) -->
        <TextView
            android:id="@+id/txtUtilizador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Utilizador: -"
            android:textSize="12sp"
            android:visibility="gone"/>

        <!-- Linha de ações para Admin (editar estado / eliminar) -->
        <LinearLayout
            android:id="@+id/rowAcoesAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Estado" />

            <!-- Espaçamento entre botões -->
            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar" />
        </LinearLayout>

        <!-- Call-to-action "Ver mais" no fundo do card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/txtVerMais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ver_mais"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="?attr/colorPrimary" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
