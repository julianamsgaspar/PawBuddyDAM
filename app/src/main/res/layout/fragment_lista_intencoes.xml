<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.activity.activity.ListaIntencoesFragment">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_adoption_intents_list"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="12dp" />

    <!-- Filtro (apenas User normal) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        app:singleSelection="true"
        app:chipSpacingHorizontal="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEmCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intents_filter_active"
            android:checkable="true"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFinalizadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intents_filter_finished"
            android:checkable="true"
            app:checkedIconVisible="false" />
    </com.google.android.material.chip.ChipGroup>


    <!-- Lista -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIntencoes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- Empty state -->
    <TextView
        android:id="@+id/txtSemIntencoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_adoption_intents"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_gravity="center"
        android:padding="16dp" />


</LinearLayout>
