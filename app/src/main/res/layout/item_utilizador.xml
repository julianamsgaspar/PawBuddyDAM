<?xml version="1.0" encoding="utf-8"?>

<!--
  Item de lista em formato de cartão para apresentar um utilizador.
  Inclui avatar, informação principal e ação de remover.
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp"
    app:strokeWidth="1dp">

    <!-- Conteúdo horizontal do cartão -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp">

        <!-- Avatar / ícone do utilizador -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_person"
            android:background="?attr/colorSurfaceVariant"
            android:padding="8dp"
            app:tint="?attr/colorPrimary" />

        <!-- Bloco de informação textual -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <!-- Nome do utilizador -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Email do utilizador -->
            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:alpha="0.85"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <!-- Informação adicional (ex.: ID, NIF, etc.) -->
            <TextView
                android:id="@+id/tvUserMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:alpha="0.65"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <!-- Botão de apagar utilizador (ação destrutiva) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteUser"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/action_delete"
            android:textSize="12sp"
            app:icon="@drawable/ic_delete"
            app:iconSize="16dp"
            app:iconPadding="6dp"
            app:iconGravity="textStart"
            android:textColor="@android:color/holo_red_dark"
            app:iconTint="@android:color/holo_red_dark"
            app:strokeColor="@android:color/holo_red_dark"
            android:insetLeft="0dp"
            android:insetRight="0dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
