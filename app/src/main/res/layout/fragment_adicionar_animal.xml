<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.activity.AdicionarAnimalFragment">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- PREVIEW DA IMAGEM -->
        <ImageView
            android:id="@+id/ivPreviewImagem"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"
            android:visibility="gone"
            android:contentDescription="@string/image_preview" />


        <!-- BOTÕES DE IMAGEM -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnGaleria"
                android:text="@string/choose_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnTirarFoto"
                android:text="@string/take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp" />

        </LinearLayout>

        <!-- CAMPOS DO FORMULÁRIO -->
        <EditText
            android:id="@+id/etNome"
            android:hint="@string/field_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etRaca"
            android:hint="@string/field_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etIdade"
            android:hint="@string/field_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etGenero"
            android:hint="@string/field_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etEspecie"
            android:hint="@string/field_species"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etCor"
            android:hint="@string/field_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- BOTÃO DE ADICIONAR -->
        <Button
            android:id="@+id/btnAdicionar"
            android:text="@string/action_add_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp" />


    </LinearLayout>
</FrameLayout>