<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.activity.AdicionarAnimalFragment">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- PREVIEW DA IMAGEM -->
        <ImageView
            android:id="@+id/ivPreviewImagem"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"
            android:visibility="gone"
            android:contentDescription="Preview da imagem" />

        <!-- BOTÕES DE IMAGEM -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnGaleria"
                android:text="Escolher da Galeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnTirarFoto"
                android:text="Tirar Foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <!-- CAMPOS DO FORMULÁRIO -->
        <EditText
            android:id="@+id/etNome"
            android:hint="Nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etRaca"
            android:hint="Raça"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etIdade"
            android:hint="Idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etGenero"
            android:hint="Gênero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etEspecie"
            android:hint="Espécie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etCor"
            android:hint="Cor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- BOTÃO DE ADICIONAR -->
        <Button
            android:id="@+id/btnAdicionar"
            android:text="Adicionar Animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp" />
        <Button
            android:id="@+id/btnVoltarHome"
            android:text="Voltar para Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>


    </LinearLayout>
</FrameLayout>