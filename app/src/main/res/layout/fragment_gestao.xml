<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout do Fragment GestaoFragment (dashboard de administração).
  Usa NestedScrollView para suportar scroll e ConstraintLayout + Flow para organizar cards em grelha.
-->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".ui.activity.activity.GestaoFragment">

    <!-- Root do ecrã (ConstraintLayout para permitir posicionamento com constraints e Flow) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER:
             Título e subtítulo do dashboard administrativo -->
        <TextView
            android:id="@+id/tvAdminTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/admin_dashboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAdminSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/admin_dashboard_subtitle"
            android:textSize="14sp"
            android:alpha="0.85"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvAdminTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CARD: Adicionar animal
             Ação rápida para abrir o fluxo de criação/registo de um novo animal -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAddAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_add"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_add_animal"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_add_animal_desc"
                    android:textSize="12sp"
                    android:alpha="0.8"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnAdicionarAnimal"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_open"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD: Listar animais
             Acesso à listagem para gestão/consulta de animais -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardListAnimals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_pets"
                    android:contentDescription="@null"
                    app:tint="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_list_animals"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_list_animals_desc"
                    android:textSize="12sp"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnListarAnimais"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_open"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD: Listar utilizadores
             Acesso à gestão e consulta de utilizadores -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardListUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_users"
                    android:contentDescription="@null"
                    app:tint="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_list_users"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_list_users_desc"
                    android:textSize="12sp"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnListarUtilizadores"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_open"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD: Listar intenções
             Acesso à listagem de intenções de adoção (para validação/gestão) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardListIntents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_list"
                    android:contentDescription="@null"
                    app:tint="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_list_intents"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_list_intents_desc"
                    android:textSize="12sp"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnListarIntencoes"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_open"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FLOW:
             Helper do ConstraintLayout para organizar os 4 cards anteriores em grelha (2 colunas) -->
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flowCards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="cardAddAnimal,cardListAnimals,cardListUsers,cardListIntents"
            app:flow_wrapMode="aligned"
            app:flow_maxElementsWrap="2"
            app:flow_horizontalGap="12dp"
            app:flow_verticalGap="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvAdminSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CARD: Adoções finais
             Secção full width (abaixo da grelha) para consulta de adoções concluídas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFinalAdoptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/flowCards"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_admin"
                    android:contentDescription="@null"
                    app:tint="?attr/colorOnSurfaceVariant"/>

                <!-- Bloco de texto (título + descrição) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_final_adoptions"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_final_adoptions_desc"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Botão de acesso à listagem de adoções -->
                <Button
                    android:id="@+id/btnListarAdocoes"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_open" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
