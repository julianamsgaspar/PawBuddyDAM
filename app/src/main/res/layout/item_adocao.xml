<?xml version="1.0" encoding="utf-8"?>

<!--
  Layout de um item de lista (linha) para uma intenção de adoção.
  Usa ConstraintLayout como root e um CardView para o efeito de cartão.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="12dp">

    <!--
      Cartão principal da intenção:
      texto à esquerda e botão de ação (eliminar) à direita
    -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardIntencao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Container horizontal do conteúdo do cartão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="14dp">

            <!-- Área de texto (ocupa o máximo de espaço disponível) -->
            <LinearLayout
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="10dp">

                <!-- Nome do animal -->
                <TextView
                    android:id="@+id/tvNomeAnimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Informação adicional do animal -->
                <TextView
                    android:id="@+id/tvAnimalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:alpha="0.85"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />

                <!-- Nome do utilizador -->
                <TextView
                    android:id="@+id/tvUtilizador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:alpha="0.75"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />

                <!-- Data da intenção -->
                <TextView
                    android:id="@+id/tvData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:alpha="0.65"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Botão de eliminar (compacto e destacado a vermelho) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/dialog_delete"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconPadding="6dp"
                app:iconGravity="textStart"
                android:textColor="@android:color/holo_red_dark"
                app:iconTint="@android:color/holo_red_dark"
                app:strokeColor="@android:color/holo_red_dark"
                android:insetLeft="0dp"
                android:insetRight="0dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
