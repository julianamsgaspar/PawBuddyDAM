<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout do ecrã "Lista de Animais".
  Usa NestedScrollView para permitir scroll de todo o conteúdo e SwipeRefreshLayout para "pull to refresh".
-->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:descendantFocusability="afterDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.activity.ListaAnimaisFragment">

    <!-- Container vertical para título, pesquisa e lista -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título do ecrã -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nav_animais"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="10dp" />

        <!-- Campo de pesquisa com ícone de limpar texto (Material) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:layout_marginBottom="12dp">

            <!-- Input da pesquisa -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_animals_hint"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Caixa de filtros (colapsável) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header: título + botão expand/collapse -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/filters_title"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btnToggleFilters"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/filters_toggle"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <!-- Conteúdo colapsável -->
                <LinearLayout
                    android:id="@+id/filtersContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    >

                    <!-- Espécie -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/filter_species">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/actSpecies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Género -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/filter_gender">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/actGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Ordenação -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/filter_sort">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/actSort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Ações -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearFilters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_clear"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnApplyFilters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/action_apply" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- SwipeRefreshLayout: permite atualizar a lista ao puxar para baixo -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- FrameLayout para sobrepor estados (lista, loading, empty, erro) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- RecyclerView onde são listados os animais -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAnimais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="12dp" />

                <!-- Indicador de carregamento (invisível por defeito) -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center" />

                <!-- Estado vazio: mostrado quando não há resultados -->
                <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="24dp">

                    <!-- Ícone ilustrativo do estado vazio -->
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_pet_placeholder"
                        android:contentDescription="@null"
                        android:alpha="0.7" />

                    <!-- Mensagem principal do estado vazio -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_animals"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />

                    <!-- Descrição/ajuda do estado vazio -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_animals_desc"
                        android:textAlignment="center"
                        android:alpha="0.85"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Mensagem de erro (mantém o ID original para compatibilidade com o Fragment) -->
                <TextView
                    android:id="@+id/txtErro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:textColor="@color/error_red"
                    android:padding="16dp" />

            </FrameLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
