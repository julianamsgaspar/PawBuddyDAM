<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout do ecrã de Registo.
  Usa ScrollView para permitir scroll em formulários longos.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    tools:context=".ui.activity.activity.RegisterFragment">

    <!-- Container principal vertical -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Espaçamento superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <!-- Card que agrupa todo o formulário -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp">

            <!-- Conteúdo interno do card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Ícone ilustrativo do ecrã -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/home_hero_image"
                    android:src="@drawable/ic_person_add"
                    app:tint="?attr/colorPrimary" />

                <!-- Título do formulário -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/action_register"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Subtítulo explicativo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/register_subtitle"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <!-- Campo: Nome completo -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:startIconDrawable="@drawable/ic_account_circle"
                    android:hint="@string/hint_full_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:startIconDrawable="@drawable/ic_email"
                    android:hint="@string/hint_email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:endIconMode="password_toggle"
                    android:hint="@string/hint_password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Data de nascimento -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDataNascimento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:startIconDrawable="@drawable/ic_calendar"
                    android:hint="@string/hint_birthdate">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDataNascimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: NIF -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:startIconDrawable="@drawable/ic_badge"
                    android:hint="@string/hint_nif">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Telemóvel -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTelemovel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:startIconDrawable="@drawable/ic_phone"
                    android:hint="@string/hint_phone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTelemovel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Morada -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMorada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:startIconDrawable="@drawable/ic_home"
                    android:hint="@string/hint_address">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMorada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:maxLines="2" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Código Postal -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCodPostal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:startIconDrawable="@drawable/ic_local_post_office"
                    android:hint="@string/hint_postal_code">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCodPostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: País -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:startIconDrawable="@drawable/ic_public"
                    android:hint="@string/hint_country">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPais"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botão de submissão do registo -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/action_register"
                    app:cornerRadius="14dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Espaçamento inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />

    </LinearLayout>
</ScrollView>
