<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout do ecrã de Registo (RegisterFragment).

  Enquadramento:
  - O formulário é apresentado dentro de um MaterialCardView para melhorar legibilidade e hierarquia visual.
  - O uso de ScrollView garante acessibilidade em ecrãs pequenos (evita cortes e permite scroll).

  Notas de UX/validação:
  - Alguns constraints são colocados no XML (ex.: inputType, maxLength, focus/click), mas a validação final
    e filtros adicionais são aplicados no Fragment (InputFilters/TextWatchers), garantindo robustez.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    tools:context=".ui.activity.activity.RegisterFragment">

    <!-- Container principal do conteúdo (stack vertical). -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Espaçamento superior (respiração visual). -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <!-- Card que agrupa o formulário (Material Design). -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp">

            <!-- Conteúdo interno do card. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Ícone ilustrativo do ecrã. -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/home_hero_image"
                    android:src="@drawable/ic_person_add"
                    app:tint="?attr/colorPrimary" />

                <!-- Título principal. -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/action_register"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Texto auxiliar. -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/register_subtitle"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <!-- Campo: Nome completo -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:hint="@string/hint_full_name"
                    app:startIconDrawable="@drawable/ic_account_circle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:maxLength="80" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/hint_email"
                    app:startIconDrawable="@drawable/ic_email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/hint_password"
                    app:endIconMode="password_toggle"
                    app:startIconDrawable="@drawable/ic_lock">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Confirmar Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/hint_confirm_password"
                    app:endIconMode="password_toggle"
                    app:startIconDrawable="@drawable/ic_lock">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--
                  Campo: Data de nascimento

                  Implementação recomendada:
                  - Campo não editável (inputType none) e interação via DatePickerDialog no Fragment.
                  - Evita inconsistências de formato e melhora UX (seleção por calendário).
                -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDataNascimento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/hint_birthdate"
                    app:startIconDrawable="@drawable/ic_calendar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDataNascimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:maxLines="1"
                        tools:text="01/01/2000" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--
                  Campo: NIF
                  - Apenas numérico.
                  - Comprimento fixo esperado: 9 dígitos (controlado por maxLength e filtros no Fragment).
                -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/hint_nif"
                    app:startIconDrawable="@drawable/ic_badge">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="9"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--
                  Campo: Telemóvel
                  - inputType "phone" para teclado adequado.
                  - Comprimento fixo esperado: 9 dígitos (validado no Fragment).
                -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTelemovel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/hint_phone"
                    app:startIconDrawable="@drawable/ic_phone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTelemovel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="9"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: Morada -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMorada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/hint_address"
                    app:startIconDrawable="@drawable/ic_home">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMorada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:maxLines="2"
                        android:maxLength="120" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--
                  Campo: Código Postal
                  - Formato esperado: NNNN-NNN (ex.: 1000-001).
                  - maxLength=8 e, no Fragment, um TextWatcher insere automaticamente o hífen.
                -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCodPostal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/hint_postal_code"
                    app:startIconDrawable="@drawable/ic_local_post_office">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCodPostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="8"
                        android:maxLines="1"
                        tools:text="1234-567" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo: País -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/hint_country"
                    app:startIconDrawable="@drawable/ic_public">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPais"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="60"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botão de submissão do registo -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/action_register"
                    app:cornerRadius="14dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Espaçamento inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />

    </LinearLayout>
</ScrollView>
