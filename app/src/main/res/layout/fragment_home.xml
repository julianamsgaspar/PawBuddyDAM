<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout do ecrã Home (HomeFragment).
  Usa ScrollView para permitir scroll e suportar conteúdos longos, mantendo fillViewport para ocupar o ecrã.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Container vertical do conteúdo principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Saudação / estado de sessão -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Olá, Utilizador "
            android:textSize="18sp"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:alpha="0.90" />
        <!-- HERO:
             Cartão de apresentação da app (título, subtítulo, dica) e ícone principal -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorPrimaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Bloco de texto do hero -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Nome da aplicação -->
                    <TextView
                        android:id="@+id/tvHomeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <!-- Subtítulo/descrição curta -->
                    <TextView
                        android:id="@+id/tvHomeSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/home_subtitle"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:alpha="0.88" />

                    <!-- Dica adicional / callout -->
                    <TextView
                        android:id="@+id/tvHomeHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/home_hint"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:alpha="0.82" />
                </LinearLayout>

                <!-- Ícone do hero (tint coerente com container) -->
                <ImageView
                    android:id="@+id/imgHero"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="@string/home_hero_image"
                    android:src="@drawable/ic_pets"
                    app:tint="?attr/colorOnPrimaryContainer" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BENEFÍCIOS / CHIPS:
             ChipGroup em linha única com mensagens curtas de valor -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupBenefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            app:singleLine="true"
            app:chipSpacingHorizontal="8dp">


            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_chip_fast"
                app:chipIcon="@drawable/ic_speed"
                app:chipIconTint="?attr/colorPrimary"
                app:iconStartPadding="6dp"
                app:chipBackgroundColor="?attr/colorSurfaceVariant"
                app:chipStrokeWidth="0dp"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                app:chipMinHeight="32dp"
                android:clickable="false"
                android:checkable="false"
                android:focusable="false"
                />


            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_chip_safe"
                app:chipIcon="@drawable/ic_shield"
                app:chipIconTint="?attr/colorPrimary"
                app:iconStartPadding="6dp"
                app:chipBackgroundColor="?attr/colorSurfaceVariant"
                app:chipStrokeWidth="0dp"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                app:chipMinHeight="32dp"
                android:clickable="false"
                android:checkable="false"
                android:focusable="false"
                />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_chip_simple"
                app:chipIcon="@drawable/ic_check"
                app:chipIconTint="?attr/colorPrimary"
                app:iconStartPadding="6dp"
                app:chipBackgroundColor="?attr/colorSurfaceVariant"
                app:chipStrokeWidth="0dp"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                app:chipMinHeight="32dp"
                android:clickable="false"
                android:checkable="false"
                android:focusable="false"
                />
        </com.google.android.material.chip.ChipGroup>

        <!-- SECÇÃO: AÇÕES
             Introduz o conjunto de cartões clicáveis (CTAs) -->
        <TextView
            android:id="@+id/tvActionsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/home_actions_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />

        <!-- CTA: Explorar Animais
             Card clicável que direciona para a listagem de animais -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="?attr/colorPrimary"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Ícone do CTA -->
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/home_cta_animals_title"
                    android:src="@drawable/ic_pets"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <!-- Texto do CTA -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_cta_animals_title"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_cta_animals_desc"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <!-- Indicador visual de navegação -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/accessibility_go"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CTA: Minhas Intenções -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMyIntents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:rippleColor="?attr/colorPrimary"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/title_adoption_intents_list"
                    android:src="@drawable/ic_list"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/action_view_adoptions"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_cta_login_desc"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/accessibility_go"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CTA: Registo -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="?attr/colorPrimary"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/home_cta_register_title"
                    android:src="@drawable/ic_person_add"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_cta_register_title"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_cta_register_desc"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/accessibility_go"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CTA: Sobre (About) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="?attr/colorPrimary"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/accessibility_about"
                    android:src="@drawable/ic_info"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_cta_about_title"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_cta_about_desc"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/accessibility_go"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- COMO FUNCIONA -->
        <TextView
            android:id="@+id/tvHowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/home_how_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_how_step1"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_how_step2"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_how_step3"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Espaço final para conforto visual -->
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />

    </LinearLayout>
</ScrollView>
