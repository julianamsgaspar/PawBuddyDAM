<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnRegisterr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="8dp"/>
<!--    <Button-->
<!--        android:id="@+id/btnIrAdicionarAnimal"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Adicionar Animal" />-->
    <Button
        android:id="@+id/btnIrListaAnimais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Animais"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnIrAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestão"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/btnVerPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Perfil"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnVerIntencoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Adoções"
        android:layout_marginTop="12dp"/>

</LinearLayout>
