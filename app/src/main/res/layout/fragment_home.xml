<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout do ecrã Home (HomeFragment).
  Usa ScrollView para permitir scroll e suportar conteúdos longos, mantendo fillViewport para ocupar o ecrã.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Container vertical do conteúdo principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HERO:
             Cartão de apresentação da app (título, subtítulo, dica) e ícone principal -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Bloco de texto do hero -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Nome da aplicação -->
                    <TextView
                        android:id="@+id/tvHomeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textStyle="bold"
                        android:textSize="24sp" />

                    <!-- Subtítulo/descrição curta -->
                    <TextView
                        android:id="@+id/tvHomeSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/home_subtitle"
                        android:textSize="14sp" />

                    <!-- Dica adicional / callout -->
                    <TextView
                        android:id="@+id/tvHomeHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/home_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Ícone do hero (tint primário) -->
                <ImageView
                    android:id="@+id/imgHero"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="@string/home_hero_image"
                    android:src="@drawable/ic_pets"
                    app:tint="?attr/colorPrimary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BENEFÍCIOS / CHIPS:
             ChipGroup em linha única com mensagens curtas de valor -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupBenefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:singleLine="true"
            app:chipSpacingHorizontal="8dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_chip_fast" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_chip_safe" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_chip_simple" />
        </com.google.android.material.chip.ChipGroup>

        <!-- SECÇÃO: AÇÕES
             Introduz o conjunto de cartões clicáveis (CTAs) -->
        <TextView
            android:id="@+id/tvActionsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/home_actions_title"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- CTA: Explorar Animais
             Card clicável que direciona para a listagem de animais -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="?attr/colorPrimary"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Ícone do CTA (tint secundário/neutral) -->
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/home_cta_animals_title"
                    android:src="@drawable/ic_pets"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <!-- Texto do CTA -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_cta_animals_title"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_cta_animals_desc"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Indicador visual de navegação -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/accessibility_go"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CTA: Minhas Intenções
             Visível apenas para utilizador autenticado não-admin (controlado no Kotlin) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMyIntents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:rippleColor="?attr/colorPrimary"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/title_adoption_intents_list"
                    android:src="@drawable/ic_list"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/action_view_adoptions"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_cta_login_desc"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/accessibility_go"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CTA: Registo
             Visível tipicamente quando o utilizador não está autenticado (controlado no Kotlin) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="?attr/colorPrimary"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/home_cta_register_title"
                    android:src="@drawable/ic_person_add"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_cta_register_title"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_cta_register_desc"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/accessibility_go"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CTA: Sobre (About)
             Card de acesso à informação institucional e detalhes técnicos -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="?attr/colorPrimary"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/accessibility_about"
                    android:src="@drawable/ic_info"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_cta_about_title"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_cta_about_desc"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/accessibility_go"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- COMO FUNCIONA:
             Secção explicativa com passos resumidos do fluxo de adoção -->
        <TextView
            android:id="@+id/tvHowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/home_how_title"
            android:textStyle="bold"
            android:textSize="16sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Passo 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_how_step1"
                    android:textSize="13sp" />

                <!-- Passo 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_how_step2"
                    android:textSize="13sp" />

                <!-- Passo 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_how_step3"
                    android:textSize="13sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Espaço final para conforto visual -->
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />

    </LinearLayout>
</ScrollView>
